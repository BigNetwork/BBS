<h1>Listing deliveries</h1>

<table class="index_table">
  <tr>
    <th>Delivery</th>
    <th>What was delivered:</th>
  </tr>

<% @deliveries.each do |delivery| %>
  <tr class="<%= cycle :odd, :even %>">
    <td><%= link_to "Delivery #{delivery.id}", delivery %></td>
    <td><%= delivery.quantity %> x <%= link_to delivery.product_type.name, delivery.product_type %></td>
    <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
    <td><%= link_to 'Destroy', delivery, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New delivery', new_delivery_path %>