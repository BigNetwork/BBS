<h1>Listing <%= controller.controller_name.humanize.downcase %></h1>

<table class="index_table">
  <tr>
    <th>Parent</th>
    <th>Child</th>
  </tr>

<% @product_type_relations.each do |product_type_relation| %>
  <tr>
    <td><%=h product_type_relation.parent_id %></td>
    <td><%=h product_type_relation.child_id %></td>
    <td><%= link_to t('Show'), product_type_relation %></td>
    <td class="edit"><%= link_to t('Edit'), edit_product_type_relation_path(product_type_relation) %></td>
    <td><%= link_to 'Destroy', product_type_relation, :confirm => t('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

