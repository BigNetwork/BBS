<h1>Editing product_type</h1>

<% form_for(@product_type) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :standard_price %><br />
    <%= f.text_field :standard_price %>
  </p>
  <p>
    <%= f.label :crew_price %><br />
    <%= f.text_field :crew_price %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

