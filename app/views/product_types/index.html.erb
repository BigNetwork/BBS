<h1>Listing product types</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Standard price</th>
    <th>Crew price</th>
  </tr>

<% @product_types.each do |product_type| %>
  <tr>
    <td><%=h product_type.name %></td>
    <td><%=h product_type.description %></td>
    <td><%=h product_type.standard_price %></td>
    <td><%=h product_type.crew_price %></td>
    <td><%= link_to 'Show', product_type %></td>
    <td><%= link_to 'Edit', edit_product_type_path(product_type) %></td>
    <td><%= link_to 'Destroy', product_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

