<div id="sales_products">
  <h2><%= t('products') %>:</h2>
  <ul id="product_types">
  <% for product_type in @product_types %>
    <li class="<%= "not_in_stock"  unless product_type.in_stock? %>">
        <% link_to url_for(:controller => 'cart_rows', :action => 'create', 'cart_row[cart_id]' => @cart.id, 'cart_row[product_type_id]' => product_type.id, 'cart_row[quantity]' => 1), :method => :post do %>
            <span class="name">
                <%= product_type.name %>
            </span>
            <span class="quantity_in_stock">
                <% if product_type.in_stock? %>
                    <%= product_type.quantity_in_stock %>st
                <% elsif product_type.quantity_in_stock == 0 %>
                    Slut
                <% else %>
                    <%= product_type.quantity_in_stock %>
                <% end %>
            </span>
            <span class="standard_price">
                <%= number_to_currency product_type.standard_price %>
            </span>
        <% end %>
    </li>
  <% end %>
  </ul>
</div>

<div id="sales_cart">

<h2><%= t('cart') %>:</h2>

<%= render :partial => '/carts/table', :locals => { :cart => @cart } %>

<% form_for(@purchase) do |f| %>
  <%= f.error_messages %>

  <%#= render :partial => 'form', :locals => { :f => f } %> 

  <%= f.hidden_field :cart_id, { :value => @cart.id } %>

  <p>
    <%= f.submit t('Buy') %>
  </p>
<% end %>

</div>