<h1><%= t('.title') %></h1>
<h3><%= t('.sales_subtitle') %>:</h3>
<table class="statistics_table">
  <tr class="odd">
    <td><%= t('.bought_for') %></td>
    <td class="money"><%= number_to_currency @sum_of_all_in_registered %></td>
  </tr>
  <tr class="even">
    <td><%= t('.sold_for') %></td>
    <td class="money"><%= number_to_currency @sum_of_all_sold %></td>
  </tr>
  <tr class="sum">
    <td><%= t('.result') %>:</td>
    <td class="money <%= "negative" if @result < 0 %><%= "positive" if @result >= 0 %>">
      <%= number_to_currency @result %>
    </td>
  </tr>
